.row
  =simple_form_for @block, html: {id: 'block_form'}, url: admin_block_path(@block) do |f|
    .col-md-2
    .col-md-8
      .row
        =f.input :name, label: false, label: "Name"
        =f.input :description, label: false, label: "Description"
        =f.input :polyline, label: false, as: :hidden

= content_tag "div", id: "map", data: {polyline: @block.polyline, color: @block.color} do
  Loading map...

%meta{content: "initial-scale=1.0, user-scalable=no", name: "viewport"}


%br
.row.text-center
  %button.btn.btn-info{onclick: "$('#block_form').submit()"}
    Update Block
:css
  /* Always set the map height explicitly to define the size of the div
   * element that contains the map. */
  #map {
    height: 40%;
  }
  /* Optional: Makes the sample page fill the window. */
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }

:javascript

  function initMap() {

    var polyline = $('#map').data('polyline');
    var color = $('#map').data('color');

    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 16,
      center: {lat: 42.367735, lng: -71.035241},
      mapTypeId: 'roadmap'
    });

    var new_line = new google.maps.Polyline({
      path: polyline,
      geodesic: true,
      strokeColor: color,
      strokeOpacity: .5,
      strokeWeight: 8
    });

    new_line.setMap(map);
    
    var drawingManager = new google.maps.drawing.DrawingManager({
      drawingMode: google.maps.drawing.OverlayType.POLYLINE,
      drawingControl: false,
      circleOptions: {
        fillColor: '#ffff00',
        fillOpacity: 1,
        strokeWeight: 10,
        clickable: false,
        editable: true,
        zIndex: 1
      }
    });
    drawingManager.setMap(map);

    google.maps.event.addListener(drawingManager, 'polylinecomplete', function(line) {
      document.getElementById("block_polyline").value = line.getPath().getArray().toString();

      //alert(line.getPath().getArray().toString());  
    });
  }

%script{async: "", defer: "defer", src: "https://maps.googleapis.com/maps/api/js?key=#{Config.google_maps_api_key}&libraries=drawing&callback=initMap"}
