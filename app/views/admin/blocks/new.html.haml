=simple_form_for @block, url: admin_neighborhood_blocks_path(@block.neighborhood) do |f|
  .col-md-2
  .col-md-8

    =f.input :name, label: false, label: "Name"
    =f.input :description, label: false, label: "Description"
    =f.input :polyline, label: false, label: "Line"

    =f.button :submit, "Create New Block", class: 'btn-info'