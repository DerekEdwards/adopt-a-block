%h2.text-center
  Create a new Cleaning Event
.row
  =simple_form_for @event, url: neighborhood_events_path(@event.neighborhood) do |f|
    .col-md-3
    .col-md-6
      .row
        .col-md-12
          =f.input :name
      .row
        .col-md-12    
          =f.input :location_description, label: false, label: "Location"
      .row
        .col-md-4
          =f.input :event_date, html5: true
        .col-md-3
          =f.input :start_time, html5: true
        .col-md-5
          =f.input :end_time, html5: true
      .row
        .col-md-12
          =f.input :description

%br
.row.text-center
  %button.btn.btn-info{onclick: "$('#new_event').submit()"}
    Create New Event