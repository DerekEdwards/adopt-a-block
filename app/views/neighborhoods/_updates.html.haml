                      %div.row
                        .message-header-text
                          =comment.user.name
                      %div.row
                        .message-time-text
                          =comment.created_at.strftime("%B %-d, %Y")
                      %div.row
                        .message-time-text
                          =comment.created_at.strftime("%-I:%M%p")
                    .col-md-9  
                      %div{id: 'comment_' + comment.id.to_s}
